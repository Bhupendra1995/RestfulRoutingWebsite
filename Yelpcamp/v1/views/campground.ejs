<% include partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Yelpcamp!</h1>
            <p>View the hand-picked campground from all over the world</p>
            <a href="/campground/new"><button type="button" class="btn btn-primary">create new campground</button></a>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
       <% data.forEach(function(camp){%>
       <div class="col-md-3 col-sm-6">
           <div class="thumbnail">
               <img src="<%= camp["image"] %>">
               <div class="caption">
                    <h4><%= camp["name"] %></h4>
               </div>
           </div>
       </div>
    <% }); %>
    </div>
</div>
<% include partials/footer %>